# Copy this file to .env and fill in your values.
# .env is listed in .gitignore and must never be committed.

# Required — MongoDB connection string
# Local:  mongodb://localhost:27017/
# Atlas:  mongodb+srv://<user>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017/

# Optional — defaults to "Passenger_Anomaly" if not set
DB_NAME=Passenger_Anomaly

# Optional — Flask secret key (generate with: python -c "import secrets; print(secrets.token_hex())")
SECRET_KEY=change_me_to_a_random_secret
